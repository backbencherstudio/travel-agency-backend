model CheckoutItem {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  checkout_id String?
  checkout    Checkout? @relation(fields: [checkout_id], references: [id], onDelete: Cascade)

