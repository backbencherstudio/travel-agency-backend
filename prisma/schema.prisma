// notification event
model NotificationEvent {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
  status     Int?      @default(1) @db.SmallInt

  // available values:
  // message, comment, review, booking, payment_transaction
  type String?
  // e.g. "You have a new message from John Doe"
  text String? @db.Text

  notifications Notification[]

  @@map("notification_events")
}

// notification
model Notification {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
  status     Int?      @default(1) @db.SmallInt

  // user_who_fired_event
  sender_id   String?
  sender      User?   @relation("sender", fields: [sender_id], references: [id])
  // user_to_notify, if it's null then notify all admin, and if it's not null then notify only that user
  receiver_id String?
  receiver    User?   @relation("receiver", fields: [receiver_id], references: [id])

  // notification id
  notification_event_id String?
  notification_event    NotificationEvent? @relation(fields: [notification_event_id], references: [id])

  // entity id, e.g. message_id
  entity_id String?

  // seen_by_user, Is message seen by user (receiver user)
  read_at DateTime?

  @@map("notifications")
}

