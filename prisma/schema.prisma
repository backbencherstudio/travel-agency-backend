// ==================== JUMIO VERIFICATION PROCESS ====================

// this table stores Jumio Netverify API v4 verification sessions
model JumioVerification {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
  status     Int?      @default(1) @db.SmallInt

  user_id String?
  user    User?   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // Jumio API fields
  jumio_reference_id   String? @unique // Jumio's unique reference ID
  jumio_scan_reference String? // Jumio scan reference

  // Verification type
  // available values: IDENTITY_VERIFICATION, FACE_VERIFICATION, DOCUMENT_VERIFICATION
  verification_type String?

  // Jumio verification status
  // available values: PENDING, APPROVED_VERIFIED, DENIED_FRAUD, DENIED_UNSUPPORTED_ID_TYPE, DENIED_UNSUPPORTED_ID_COUNTRY, ERROR_NOT_READABLE_ID, NO_ID_UPLOADED
  jumio_status String? @default("PENDING")

  // Jumio API response fields
  jumio_result String? @db.Text // Full Jumio API response as JSON

  // Document information from Jumio
  document_type    String? // ID_CARD, PASSPORT, DRIVERS_LICENSE, etc.
  document_country String? // Country code of the document
  document_number  String? // Document number

  // Personal information from Jumio
  first_name    String?
  last_name     String?
  date_of_birth DateTime?
  nationality   String?

  // Verification details
  verification_score      Int? // Jumio's confidence score (0-100)
  verification_confidence String? // HIGH, MEDIUM, LOW

  // Timestamps
  jumio_created_at   DateTime? // When Jumio created the verification
  jumio_updated_at   DateTime? // When Jumio last updated the verification
  jumio_completed_at DateTime? // When Jumio completed the verification

  // Session management
  session_expires_at DateTime? // When the session expires
  is_completed       Boolean?  @default(false) // Whether verification was completed

  // Admin management
  admin_notes       String?   @db.Text
  manually_reviewed Boolean?  @default(false)
  reviewed_at       DateTime?
  reviewed_by       String?

  // Error handling
  error_message    String? @db.Text
  jumio_error_code String? // Jumio error code if any

  // Related legal documents
  legal_documents LegalDocument[]

  @@map("jumio_verifications")
}

